# TradingAgents-CN Production Environment Configuration
# Copy this file to .env.production and customize for your environment

# =============================================================================
# Environment Configuration
# =============================================================================
ENVIRONMENT=production
VERSION=1.0.0
BUILD_DATE=2025-08-08
REGISTRY=your-registry.com
TAG=latest

# =============================================================================
# Service Ports Configuration
# =============================================================================
WEB_PORT=8501
API_PORT=8000
MONGODB_PORT=27017
REDIS_PORT=6379
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
FLOWER_PORT=5555
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# Database Configuration
# =============================================================================
MONGODB_PASSWORD=your-secure-mongodb-password
REDIS_PASSWORD=your-secure-redis-password

# =============================================================================
# Application Configuration
# =============================================================================
DOMAIN=your-domain.com
LOG_LEVEL=INFO

# Multi-model settings
ROUTING_STRATEGY=intelligent
DEFAULT_COLLABORATION_MODE=sequential
MAX_COST_PER_SESSION=5.0

# =============================================================================
# Service Scaling Configuration
# =============================================================================
API_WORKERS=4
API_REPLICAS=2
WORKER_REPLICAS=3
CELERY_CONCURRENCY=4

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_RETENTION_DAYS=30
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=your-secure-grafana-password
FLOWER_USERNAME=admin
FLOWER_PASSWORD=your-secure-flower-password

# =============================================================================
# API Keys and Secrets (Use Docker Secrets in production)
# =============================================================================
# AI Model API Keys
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
SILICONFLOW_API_KEY=your-siliconflow-api-key

# Data Provider API Keys
TUSHARE_TOKEN=your-tushare-token
FINNHUB_API_KEY=your-finnhub-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# =============================================================================
# Security Configuration
# =============================================================================
# JWT configuration
JWT_SECRET_KEY=your-very-secure-jwt-secret-key-at-least-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS settings
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# Performance Configuration
# =============================================================================
# Cache settings
CACHE_DEFAULT_TIMEOUT=3600
CACHE_MAX_SIZE=1000

# Database connection pool
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=5
MONGODB_CONNECT_TIMEOUT_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=30000

# Redis connection pool
REDIS_MAX_CONNECTIONS=50
REDIS_CONNECTION_TIMEOUT=30

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-west-2

# =============================================================================
# SSL Configuration
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# =============================================================================
# Development/Debug Settings (Disable in production)
# =============================================================================
DEBUG=false
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false